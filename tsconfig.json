{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": ["esnext", "dom", "dom.iterable"],
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "jsx": "react",
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": "src/",
    "paths": {
      "@assets": ["assets"],
      "@assets/*": ["assets/*"],
      "@layouts": ["layouts"],
      "@layouts/*": ["layouts/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@screens": ["screens"],
      "@screens/*": ["screens/*"],
      "@constants": ["constants"],
      "@constants/*": ["constants/*"],
      "@interfaces": ["interfaces"],
      "@interfaces/*": ["interfaces/*"],
      "@styles": ["styles"],
      "@styles/*": ["styles/*"],
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@state": ["state"],
      "@state/*": ["state/*"],
      "@types": ["types"],
      "@types/*": ["types/*"],
      "@shared": ["shared/index.ts"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"]
    },
    "incremental": true,
    "useDefineForClassFields": true,
    "noImplicitAny": true,
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",
    "typeRoots": ["../../@types", "node_modules/@types"]
  },
  "include": ["src/", "types.d.ts"],
  "exclude": ["node_modules", "test/*", "babel.config.js", "metro.config.js"]
}
